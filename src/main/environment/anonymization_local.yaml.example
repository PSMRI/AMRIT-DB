# AMRIT DB Anonymization Configuration - Local Development
# Copy to anonymization_local.yaml and update with your local database credentials

source:
  host: localhost
  port: 3306
  schemas:
    - db_iemr
    - db_identity
    - db_reporting
    - db_1097_identity
  username: root
  password: YOUR_PASSWORD_HERE
  readOnly: true
  connectionTimeout: 30000

target:
  host: localhost
  port: 3306
  schemas:
    - db_iemr_uat
    - db_identity_uat
    - db_reporting_uat
    - db_1097_identity_uat
  username: root
  password: YOUR_PASSWORD_HERE
  connectionTimeout: 30000

safety:
  enabled: true
  allowedHosts:
    - localhost
    - 127.0.0.1
  deniedPatterns:
    - "*prod*"
  requireExplicitApproval: true
  approvalFlag: LOCAL_DEV_2025

performance:
  batchSize: 500
  fetchSize: 500
  maxMemoryMb: 512

rulesFile: rules.yaml
loggingPath: ./logs
