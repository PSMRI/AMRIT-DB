# AMRIT DB Anonymization Configuration - Docker Environment
# For use with AMRIT Docker setup

source:
  host: mysql
  port: 3306
  schemas:
    - db_iemr
    - db_identity
    - db_reporting
    - db_1097_identity
  username: root
  password: password
  readOnly: true
  connectionTimeout: 30000

target:
  host: mysql
  port: 3306
  schemas:
    - db_iemr_uat
    - db_identity_uat
    - db_reporting_uat
    - db_1097_identity_uat
  username: root
  password: password
  connectionTimeout: 30000

safety:
  enabled: true
  allowedHosts:
    - mysql
    - localhost
  deniedPatterns: []
  requireExplicitApproval: true
  approvalFlag: DOCKER_ENV_2025

performance:
  batchSize: 1000
  fetchSize: 1000
  maxMemoryMb: 512

rulesFile: rules.yaml
loggingPath: /app/logs
