# AMRIT DB Anonymization Configuration - CI/CD Environment
# For automated testing and continuous integration

source:
  host: ci-mysql
  port: 3306
  schemas:
    - db_iemr
    - db_identity
    - db_reporting
    - db_1097_identity
  username: ci_user
  password: ${CI_DB_PASSWORD}
  readOnly: true
  connectionTimeout: 30000

target:
  host: ci-mysql
  port: 3306
  schemas:
    - db_iemr_test
    - db_identity_test
    - db_reporting_test
    - db_1097_identity_test
  username: ci_user
  password: ${CI_DB_PASSWORD}
  connectionTimeout: 30000

safety:
  enabled: true
  allowedHosts:
    - ci-mysql
    - localhost
    - 127.0.0.1
  deniedPatterns:
    - "*prod*"
  requireExplicitApproval: true
  approvalFlag: CI_AUTOMATED_2025

performance:
  batchSize: 500
  fetchSize: 500
  maxMemoryMb: 256

rulesFile: rules.yaml
loggingPath: ./target/anonymization-logs
